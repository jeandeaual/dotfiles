{
  // Editor
  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
  "editor.renderWhitespace": "boundary",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.mouseWheelZoom": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabCompletion": "onlySnippets",
  "editor.tabSize": 4,
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.matchBrackets": "never", // Never auto-close brackets
  "editor.autoClosingBrackets": "never",
  "editor.renderControlCharacters": true,
  "explorer.autoRevealExclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.bundle": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,
  "explorer.fileNesting.patterns": {
    // JavaScript / TypeScript
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock",
    // Go
    "go.mod": "go.sum",
    // Ruby
    "Gemfile": "Gemfile.lock",
    // Python
    "pyproject.toml": "poetry.lock",
    "*.in": "${capture}.txt",
    // Rust
    "Cargo.toml": "Cargo.lock",
    // Erlang
    "rebar.config": "rebar.lock",
    // Elixir
    "mix.exs": "mix.lock"
  },
  "files.associations": {
    "*.latexmkrc": "perl",
    "mix.lock": "elixir",
    "vm.args": "erlang",
    "sys.config*": "erlang",
    "*.qrc": "xml",
    "*.el": "lisp",
    "*.scxml": "xml",
    "*.tmLanguage.json": "json-tmlanguage",
    "*.tmLanguage.yaml": "yaml-tmlanguage",
    "*.tmc": "cpp",
    "*.tmh": "cpp"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // Appearence
  "workbench.colorTheme": "Noir",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.activityBar.visible": true,
  "editor.renderFinalNewline": false,
  "editor.suggestSelection": "first",
  "workbench.startupEditor": "newUntitledFile",
  "zenMode.hideLineNumbers": false,
  // Indentation and bracket guides
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.indentation": true,
  "workbench.tree.renderIndentGuides": "always",
  // General
  "workbench.list.horizontalScrolling": true,
  "files.watcherExclude": {
    "**/vendor/**": true
  },
  "breadcrumbs.enabled": true,
  "workbench.editor.closeOnFileDelete": true,
  "search.showLineNumbers": true,
  "search.smartCase": true,
  // Integrated terminal
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.tabs.title": "${process}",
  "terminal.integrated.tabs.description": "${task}${separator}${local}${separator}${cwdFolder}",
  "terminal.integrated.localEchoExcludePrograms": [
    "vim",
    "vi",
    "nano",
    "tmux",
    "emacs",
    "screen"
  ],
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": [
        "-NoLogo",
        "-NoExit"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  {{- if .flatpak }}
  // Flatpak terminal configuration
  // See https://github.com/flathub/com.visualstudio.code#usage
  "terminal.integrated.defaultProfile.linux": "Host: Bash",
  "terminal.integrated.profiles.linux": {
    "Host: Bash": {
      "path": "/usr/bin/flatpak-spawn",
      "args": [
        "--env=TERM=xterm-256color",
        "--host",
        "script",
        "--quiet",
        "/dev/null"
      ],
      "icon": "terminal-bash"
    },
    "Host: ZSH": {
      "path": "/usr/bin/flatpak-spawn",
      "args": [
        "--env=TERM=xterm-256color",
        "--env=SHELL=zsh",
        "--host",
        "script",
        "--quiet",
        "/dev/null"
      ]
    },
    "Host: Fish": {
      "path": "/usr/bin/flatpak-spawn",
      "args": [
        "--env=TERM=xterm-256color",
        "--env=SHELL=fish",
        "--host",
        "script",
        "--quiet",
        "/dev/null",
      ]
    }
  },
  {{- end }}
  // Window
  "window.commandCenter": true,
  // Telemetry
  "telemetry.telemetryLevel": "off",
  "Lua.telemetry.enable": false,
  "redhat.telemetry.enabled": false,
  "vsixViewer.enableTelemetry": false,
  // Updates
  "update.showReleaseNotes": false,
  // Ruby
  "[ruby]": {
    "editor.tabSize": 2
  },
  // Python
  "python.analysis.completeFunctionParens": true,
  "python.interpreter.infoVisibility": "always",
  "python.languageServer": "Pylance",
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pydocstyleEnabled": true,
  "python.linting.pycodestyleArgs": [
    "--ignore=E701", // Doesn't work with Python typing
    "--max-line-length",
    "120"
  ],
  "python.linting.prospectorEnabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.banditEnabled": false,
  "[python]": {
    "editor.formatOnType": true,
  },
  // Go
  "go.buildOnSave": "off",
  "go.vetOnSave": "off",
  "go.survey.prompt": false,
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    // Disable snippets, as they conflict with completion ranking.
    "editor.snippetSuggestions": "none"
  },
  "[go.mod]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "gopls": {
    // Add parameter placeholders when completing a function.
    "usePlaceholders": true,
    // If true, enable additional analyses with staticcheck.
    // Warning: This will significantly increase memory usage.
    "staticcheck": false
  },
  "go.delveConfig": {
    "dlvLoadConfig": {
      "followPointers": true,
      "maxVariableRecurse": 1,
      "maxStringLen": 24800,
      "maxArrayValues": 64,
      "maxStructFields": -1
    }
  },
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast",
    // Enabled by default
    "-E deadcode",
    "-E errcheck",
    "-E gosimple",
    "-E govet",
    "-E ineffassign",
    "-E staticcheck",
    "-E structcheck",
    "-E typecheck",
    "-E unused",
    "-E varcheck",
    // Manually enabled
    "-E dupl",
    "-E gocyclo",
    "-E gofmt",
    "-E golint",
    "-E goprintffuncname",
    "-E lll",
    "-E misspell",
    "-E prealloc",
    "-E unconvert"
  ],
  "go.toolsManagement.autoUpdate": true,
  // JSON
  "json.maxItemsComputed": 10000,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "[gojson]": {
    "editor.tabSize": 2
  },
  // YAML
  "[yaml]": {
    "editor.tabSize": 2
  },
  "[goyaml]": {
    "editor.tabSize": 2
  },
  // Markdown
  "markdown.preview.fontSize": 12,
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": true
    }
  },
  // DavidAnson.vscode-markdownlint
  "markdownlint.config": {{ includeTemplate "markdownlint/markdownlintrc.jsonc" . | indent 2 | trim }},
  // SVG
  "svg.preview.mode": "svg",
  // C / C++
  "cmake.configureOnOpen": false,
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  // C#
  "csharp.suppressDotnetInstallWarning": true,
  // Arduino
  "arduino.additionalUrls": [
    "https://raw.githubusercontent.com/espressif/arduino-esp32/gh-pages/package_esp32_index.json",
    "http://arduino.esp8266.com/stable/package_esp8266com_index.json"
  ],
  "arduino.ignoreBoards": [
    "Adafruit HUZZAH ESP8266"
  ],
  // Java
  {{- if .flatpak }}
  {{- if output "flatpak" "list" "--columns=app" | contains "org.freedesktop.Sdk.Extension.openjdk17" }}
  "java.jdt.ls.java.home": "/usr/lib/sdk/openjdk17/jvm/openjdk-17/",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/usr/lib/sdk/openjdk17/jvm/openjdk-17/",
      "default": true
    }
  ],
  {{- end }}
  {{- end }}
  // JavaScript
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  // TypeScript
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  // Elixir
  "[elixir]": {
    "editor.tabSize": 2
  },
  // HTML
  "[html]": {
    "editor.tabSize": 2
  },
  "[HTML (Eex)]": {
    "editor.tabSize": 2
  },
  "[gohtml]": {
    "editor.tabSize": 2
  },
  // LilyPond
  "vslilypond.compilation.compileOnSave": false,
  "vslilypond.compilation.compileMainFileOnSave": false,
  "[lilypond]": {
    "editor.tabSize": 2
  },
  // PowerShell
  "[powershell]": {
    "files.eol": "\r\n",
    "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
    "editor.semanticHighlighting.enabled": false,
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
  },
  // AutoHotKey
  "[ahk]": {
    "files.eol": "\r\n"
  },
  // Extensions
  "extensions.ignoreRecommendations": false,
  // Git
  "git.autofetch": "all",
  "git.branchProtection": [
    "master",
    "main"
  ],
  // eamodio.gitlens
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm",
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  // vscodevim.vim
  "vim.leader": ",",
  "vim.gdefault": true,
  // wengerk.highlight-bad-chars
  "highlight-bad-chars.additionalUnicodeChars": [
    "\u200E",
    "\u200F"
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  // gruntfuggly.todo-tree
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  // adpyke.codesnap
  "codesnap.containerPadding": "0em",
  "codesnap.roundedCorners": true,
  "codesnap.showWindowControls": false,
  "codesnap.showWindowTitle": false,
  "codesnap.showLineNumbers": false,
  "codesnap.transparentBackground": true,
  "codesnap.target": "container",
  "codesnap.shutterAction": "save",
  // mutantdino.resourcemonitor
  "resmon.show.cpuusage": true,
  "resmon.show.mem": true,
  "resmon.show.cpufreq": false,
  "resmon.show.battery": false,
  "resmon.show.disk": false,
  "resmon.updatefrequencyms": 5000,
  // ms-vscode-remote.remote-containers
  "dev.containers.copyGitConfig": true,
  {{- if .flatpak }}
  // Requires `flatpak install flathub com.visualstudio.code.tool.podman` and
  // `flatpak override com.visualstudio.code --filesystem=xdg-run/podman`
  "dev.containers.dockerPath": "/app/tools/podman/bin/podman-remote",
  {{- else }}
  "dev.containers.dockerPath": "{{ .data.dockercmd }}",
  {{- end }}
  "dotfiles.repository": "jeandeaual/dotfiles",
  {{- if eq .data.chezmoi.os "darwin" }}
  // codecontemplator.kubeseal
  "kubeseal.executablePath": "/usr/local/bin/kubeseal",
  {{- if .data.work }}
  "kubeseal.useLocalCertificate": false,
  {{- end }}
  {{- end }}
  // vivaxy.vscode-conventional-commits
  "conventionalCommits.emojiFormat": "emoji",
  "conventionalCommits.gitmoji": false,
  "conventionalCommits.showNewVersionNotes": false,
  // mshdinsight.azure-hdinsight
  "hdinsight.disableOpenSurveyLink": true
}
