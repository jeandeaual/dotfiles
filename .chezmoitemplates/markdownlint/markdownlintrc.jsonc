{
  // Default state for all rules
  "default": true,
  "MD007": {
    // The original Markdown spec and Python-Markdown require 4 spaces,
    // let's ignore them
    "indent": 2
  },
  "MD013": {
    "line_length": 80,
    // Disable line length check for tables and code blocks
    "code_blocks": false,
    "tables": false
  },
  "MD033": {
    // Allow inline HTML
    "allowed_elements": []
  }
}
