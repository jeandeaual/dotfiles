# List zombie processes
fn zombie {
  ps -eo state,ppid | eawk [line type pid]{ use str; if (str:has-prefix $type 'Z') { put $pid } } | try { ps -f {{ if eq .chezmoi.os "linux" }}--ppid{{ else }}-o ppid{{ end }} (all) } except _ { }
}
